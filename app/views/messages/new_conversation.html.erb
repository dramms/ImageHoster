<div class="MainDiv">
	<% if @friends.present? %>
		<%= form_tag messages_create_conversation_path do %>	
			<select name = "friend">
				<% @friends.each do |f| %>
					<option value=<%= f.id %>><%= f.first_name + " " + f.last_name %></option>
				<% end %>
			</select><br>
			<%= text_field_tag :topic %><br>
			<%= submit_tag "Schreiben" %>
		<% end %>
	<% end %>
</div>